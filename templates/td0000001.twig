                </div>
              </div> <!-- end row -->
            </div> <!-- end container-fluid -->
          </div> <!-- end content tab ricezione -->
        </div> <!-- end tab content -->
      </div>  <!-- /.container-fluid -->
    </div> <!-- /.content-wrapper -->
{% endblock %}

{% block footer %}
    {{ parent() }}
<script type="text/javascript">

  var app = new Vue({
    el: '#tables',
    data: {
      home: '/td0000001'
    },
    methods: {
      dispatch: function() {
        post(this.home + '/rpc/dispatch');
      },
      refreshTables: function() {
        EventBus.$emit('refreshTables');
      }
    }
  });
  document.addEventListener('DOMContentLoaded', function() {
    console.log("DOM fully loaded and parsed");
  });

// disable submit button until file selected for upload
$(document).ready(
  function(){
      $('input:file').change(
          function(){
              if ($(this).val()) {
                  $('input:submit').attr('disabled',false); 
              } 
          }
          );

        $('input[type="file"]').change(function(e){
            var fileName = e.target.files[0].name;
            $('.fileName').html(fileName);
            $('.fileMsg').show();
        });            
});


// upload asincrono: aspettare la fine del caricamento del file poi fare il refresh delle tabelle
$(document).ready(function(ev) {
    $("#upload-form").on('submit', (function(ev) {
        ev.preventDefault();
        $.ajax({
            xhr: function() {
                var progress = $('.progress'),
                    xhr = $.ajaxSettings.xhr();

                progress.show();

                xhr.upload.onprogress = function(ev) {
                    if (ev.lengthComputable) {
                        var percentComplete = parseInt((ev.loaded / ev.total) * 100);
                        progress.val(percentComplete);
                        if (percentComplete === 100) {
                            progress.hide().val(0);
                        }
                    }
                };

                return xhr;
            },
            url: '/td0000001/rpc/upload',
            type: 'POST',
            data: new FormData(this),
            contentType: false,
            cache: false,
            processData: false,
            success: function(data, status, xhr) {
                EventBus.$emit('refreshTables');
                $('.fileMsg').hide();
                $('#submit').prop('disabled', true);
                $('#success').show();
                $("#upload-form")[0].reset();
            },
            error: function(xhr, status, error) {
                $('#warning').show();
                $("#upload-form")[0].reset();
            }
       });
    }));
});
</script>
  
